@page
@model Company.DashboardModel
@{
    ViewData["Title"] = "Company Dashboard";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="h2">Company Dashboard</h1>
        <p class="text-muted">Manage your company operations and team</p>
    </div>
</div>

@if (Model.CompanyUserInfo?.CompanyOrgId != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Welcome, @Model.CompanyUserInfo.FullName</h5>
                    <p class="card-text">
                        You are logged in as a Company User for @Model.CompanyUserInfo.CompanyOrgId.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Company Settings</h5>
                </div>
                <div class="card-body">
                    <p>Manage company information, policies, and configurations.</p>
                    <a asp-page="/Company/Index" class="btn btn-primary btn-sm">Go to Settings</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Team Members</h5>
                </div>
                <div class="card-body">
                    <p>Invite users, manage permissions, and oversee your team.</p>
                    <a href="#" class="btn btn-primary btn-sm">Manage Team</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        <p>Company information not found. Please complete your company setup.</p>
        <a asp-page="/Company/Index" class="btn btn-primary">Complete Setup</a>
    </div>
}
