<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProperlyASPPages</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProperlyASPPages.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @{
                    var userManager = ViewContext.HttpContext.RequestServices
                        .GetRequiredService<Microsoft.AspNetCore.Identity.UserManager<Properly.Models.ApplicationUser>>();
                    var roleContextService = ViewContext.HttpContext.RequestServices
                        .GetRequiredService<ProperlyASPPages.Services.IRoleContextService>();

                    var user = await userManager.GetUserAsync(User);
                    var currentRole = roleContextService.GetCurrentRole();
                    var isUserLoggedInWithRole = user != null && currentRole != Properly.Models.DomainUserType.None;
                }

                @if (!isUserLoggedInWithRole)
                {
                    <a class="navbar-brand" asp-area="" asp-page="/Index">Properly</a>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (!isUserLoggedInWithRole)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                            </li>
                        }

                        @if (isUserLoggedInWithRole)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Dashboard">Role</a>
                            </li>

                            @if (currentRole == Properly.Models.DomainUserType.Management)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Management/Index">Dashboard</a>
                                </li>
                            }
                            else if (currentRole == Properly.Models.DomainUserType.Owner)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Owner/Index">Dashboard</a>
                                </li>
                            }
                            else if (currentRole == Properly.Models.DomainUserType.Tenant)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Tenant/Index">Dashboard</a>
                                </li>
                            }
                            else if (currentRole == Properly.Models.DomainUserType.Service)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Service/Index">Dashboard</a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ProperlyASPPages - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
