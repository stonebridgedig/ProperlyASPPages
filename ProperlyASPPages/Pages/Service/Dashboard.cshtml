@page
@model Service.DashboardModel
@{
    ViewData["Title"] = "Service Dashboard";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="h2">Service Dashboard</h1>
        <p class="text-muted">Manage service requests and work orders</p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Welcome, @Model.CurrentUser.FirstName @Model.CurrentUser.LastName</h5>
                <p class="card-text">
                    You are logged in as a Service User. Manage service requests, schedule appointments, and track work orders.
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Service Requests</h5>
            </div>
            <div class="card-body">
                <p>View and manage service requests assigned to you.</p>
                <a asp-page="/Managers" class="btn btn-warning btn-sm">View Requests</a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Work Orders</h5>
            </div>
            <div class="card-body">
                <p>Track and manage your scheduled work orders.</p>
                <a href="#" class="btn btn-warning btn-sm">View Work Orders</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Schedule</h5>
            </div>
            <div class="card-body">
                <p>View your upcoming appointments and schedule.</p>
                <a href="#" class="btn btn-warning btn-sm">View Schedule</a>
            </div>
        </div>
    </div>
</div>
