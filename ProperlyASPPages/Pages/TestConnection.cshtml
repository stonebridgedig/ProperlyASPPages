@page
@model ProperlyASPPages.Pages.TestConnectionModel
@{
    ViewData["Title"] = "Test Database Connection";
}

<div class="container mt-5">
    <h1>Database Connection Test</h1>
    
    @if (Model.ConnectionResult != null)
    {
        <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger")" role="alert">
            <h4>@(Model.IsSuccess ? "? Success!" : "? Failed")</h4>
            <pre>@Model.ConnectionResult</pre>
        </div>
    }
    
    <form method="post">
        <button type="submit" class="btn btn-primary">Test Connection</button>
    </form>
</div>
