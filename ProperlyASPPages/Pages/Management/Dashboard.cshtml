@page
@model Management.DashboardModel
@{
    ViewData["Title"] = "Management Dashboard";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="h2">Management Dashboard</h1>
        <p class="text-muted">Manage your organization operations and team</p>
    </div>
</div>

@if (Model.ManagementUserInfo?.ManagementOrgId != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Welcome, @Model.ManagementUserInfo.FullName</h5>
                    <p class="card-text">
                        You are logged in as a Management User for @Model.ManagementUserInfo.ManagementOrgId.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Management Settings</h5>
                </div>
                <div class="card-body">
                    <p>Manage organization information, policies, and configurations.</p>
                    <a asp-page="/Management/Index" class="btn btn-primary btn-sm">Go to Settings</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Team Members</h5>
                </div>
                <div class="card-body">
                    <p>Invite users, manage permissions, and oversee your team.</p>
                    <a href="#" class="btn btn-primary btn-sm">Manage Team</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        <p>Management organization information not found. Please complete your setup.</p>
        <a asp-page="/Management/Index" class="btn btn-primary">Complete Setup</a>
    </div>
}
