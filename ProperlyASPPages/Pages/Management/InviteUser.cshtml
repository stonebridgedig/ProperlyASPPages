@page
@model ProperlyASPPages.Pages.Management.InviteUserModel
@{
    ViewData["Title"] = "Invite User to Management";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @Model.StatusMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <p class="text-muted mb-4">
                        Send an invitation to allow a user to join your management organization. They will receive an email with a secure link.
                    </p>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control" placeholder="user@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.FullName" class="form-label"></label>
                            <input asp-for="Input.FullName" class="form-control" placeholder="Optional" />
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                            <small class="form-text text-muted">If provided, this will pre-fill the user's name when they accept.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Role" class="form-label"></label>
                            <select asp-for="Input.Role" class="form-select">
                                <option value="User">User</option>
                                <option value="Admin">Administrator</option>
                                <option value="Manager">Manager</option>
                            </select>
                            <span asp-validation-for="Input.Role" class="text-danger"></span>
                            <small class="form-text text-muted">Administrators can invite other users and manage organization settings.</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-envelope"></i> Send Invitation
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Pending Invitations</h5>
                </div>
                <div class="card-body">
                    @if (Model.PendingInvitations.Any())
                    {
                        <div class="list-group">
                            @foreach (var invitation in Model.PendingInvitations)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@invitation.Email</h6>
                                        <small class="text-muted">
                                            <span class="badge bg-warning">Pending</span>
                                        </small>
                                    </div>
                                    @if (!string.IsNullOrEmpty(invitation.InvitedFullName))
                                    {
                                        <p class="mb-1 small">@invitation.InvitedFullName</p>
                                    }
                                    <small class="text-muted">
                                        Role: @invitation.Role
                                    </small>
                                    <br/>
                                    <small class="text-muted">
                                        Expires: @invitation.ExpiresAt?.ToString("MMM dd, yyyy")
                                    </small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center mb-0">No pending invitations</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
