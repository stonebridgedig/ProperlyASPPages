@page
@model ProperlyASPPages.Pages.Admin.Companies.IndexModel
@{
    ViewData["Title"] = "Manage Companies";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h2">Manage Companies</h1>
            <p class="text-muted">View and manage all company organizations</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-page="/Admin/Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Company Name</th>
                            <th>Legal Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Location</th>
                            <th>Users</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var company in Model.Companies)
                        {
                            <tr class="@(company.IsActive ?? false ? "" : "table-secondary")">
                                <td><strong>@company.Name</strong></td>
                                <td>@(company.LegalName ?? "-")</td>
                                <td>@(company.Email ?? "-")</td>
                                <td>@(company.Phone ?? "-")</td>
                                <td>
                                    <small>
                                        @if (!string.IsNullOrEmpty(company.City) && !string.IsNullOrEmpty(company.State))
                                        {
                                            @($"{company.City}, {company.State}")
                                        }
                                        else
                                        {
                                            <text>-</text>
                                        }
                                    </small>
                                </td>
                                <td>
                                    @if (company.CompanyOrgId.HasValue)
                                    {
                                        <span class="badge bg-primary">
                                            @Model.CompanyUserCounts.GetValueOrDefault(company.CompanyOrgId.Value, 0) users
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (company.IsActive ?? false)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <small>@(company.CreatedAt?.ToLocalTime().ToString("MM/dd/yyyy") ?? "-")</small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="#" class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="#" class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Companies.Any())
            {
                <div class="text-center py-5">
                    <p class="text-muted">No companies found</p>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
        }
    </style>
}
