@page
@model ProperlyASPPages.Pages.Admin.Management.IndexModel
@{
    ViewData["Title"] = "Manage Management Organizations";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="h2">Manage Management Organizations</h1>
            <p class="text-muted">View and manage all management organizations</p>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Organization Name</th>
                            <th>Legal Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Location</th>
                            <th>Users</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var management in Model.ManagementOrgs)
                        {
                            <tr class="@(management.IsActive ?? false ? "" : "table-secondary")">
                                <td><strong>@management.Name</strong></td>
                                <td>@(management.LegalName ?? "-")</td>
                                <td>@(management.Email ?? "-")</td>
                                <td>@(management.Phone ?? "-")</td>
                                <td>
                                    <small>
                                        @if (!string.IsNullOrEmpty(management.City) && !string.IsNullOrEmpty(management.State))
                                        {
                                            @($"{management.City}, {management.State}")
                                        }
                                        else
                                        {
                                            <text>-</text>
                                        }
                                    </small>
                                </td>
                                <td>
                                    @if (management.ManagementOrgId.HasValue)
                                    {
                                        <span class="badge bg-primary">
                                            @Model.ManagementUserCounts.GetValueOrDefault(management.ManagementOrgId.Value, 0) users
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (management.IsActive ?? false)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <small>@(management.CreatedAt?.ToLocalTime().ToString("MM/dd/yyyy") ?? "-")</small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="#" class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="#" class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.ManagementOrgs.Any())
            {
                <div class="text-center py-5">
                    <p class="text-muted">No management organizations found</p>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
        }
    </style>
}
