@page
@model ProperlyASPPages.Pages.Admin.ActivityModel
@{
    ViewData["Title"] = "System Activity Log";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="h2">System Activity Log</h1>
            <p class="text-muted">Track all system administrator actions</p>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Timestamp</th>
                            <th>Administrator</th>
                            <th>Activity</th>
                            <th>Description</th>
                            <th>Entity</th>
                            <th>IP Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model.ActivityLogs)
                        {
                            var admin = Model.AdminLookup.GetValueOrDefault(log.SystemAdminId);
                            <tr>
                                <td>
                                    <small>@log.Timestamp.ToLocalTime().ToString("MM/dd/yyyy HH:mm:ss")</small>
                                </td>
                                <td>
                                    @if (admin != null)
                                    {
                                        <strong>@admin.FullName</strong>
                                        <br />
                                        <small class="text-muted">@admin.Role.RoleName</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Admin #@log.SystemAdminId</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@log.Activity</span>
                                </td>
                                <td>
                                    <small>@(log.Description ?? "-")</small>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(log.EntityType))
                                    {
                                        <small>
                                            <span class="badge bg-secondary">@log.EntityType</span>
                                            @if (!string.IsNullOrEmpty(log.EntityId))
                                            {
                                                <span class="text-muted">#@log.EntityId</span>
                                            }
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">@(log.IpAddress ?? "-")</small>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @if (!Model.ActivityLogs.Any())
            {
                <div class="text-center py-5">
                    <p class="text-muted">No activity logs found</p>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
        }
    </style>
}
