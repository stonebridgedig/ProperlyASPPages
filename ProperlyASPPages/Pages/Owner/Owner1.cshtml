@page
@model Owner.Owner1Model
@{
    ViewData["Title"] = "Owner1";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="h2">Owner1</h1>
        <p class="text-muted">Owner Role - Owner1 Page</p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Welcome, @Model.CurrentUser.FirstName @Model.CurrentUser.LastName</h5>
                <p class="card-text">This is a placeholder page for Owner1. Content will be added later.</p>
            </div>
        </div>
    </div>
</div>

<div id="react-root"></div>

@section Scripts {
    <script type="module">
        import React from 'https://esm.sh/react@17.0.2';
        import { createRoot } from 'https://esm.sh/react-dom@17.0.2';

        const Owner1 = () => {
            return React.createElement(
                'div',
                { className: 'container mt-4' },
                React.createElement('div', { className: 'row mb-4' },
                    React.createElement('div', { className: 'col-md-8' },
                        React.createElement('h1', { className: 'h2' }, 'Owner1 - Property Management'),
                        React.createElement('p', { className: 'text-muted' }, 'Owner Role - Owner1 Page')
                    )
                ),
                React.createElement('div', { className: 'row' },
                    React.createElement('div', { className: 'col-md-12' },
                        React.createElement('div', { className: 'card' },
                            React.createElement('div', { className: 'card-body' },
                                React.createElement('h5', { className: 'card-title' }, `Welcome, @Model.CurrentUser.FirstName @Model.CurrentUser.LastName`),
                                React.createElement('p', { className: 'card-text' }, 'This is a placeholder page for Owner1. Content will be added later.'),
                                React.createElement('ul', { className: 'list-group mt-3' },
                                    React.createElement('li', { className: 'list-group-item' }, 'Property Portfolio'),
                                    React.createElement('li', { className: 'list-group-item' }, 'Tenant Management'),
                                    React.createElement('li', { className: 'list-group-item' }, 'Financial Reports')
                                )
                            )
                        )
                    )
                )
            );
        };

        const container = document.getElementById('react-root');
        if (container) {
            const root = createRoot(container);
            root.render(React.createElement(Owner1));
        }
    </script>
}
