@page
@model ProperlyASPPages.Pages.Onboarding.AcceptInvitationModel
@{
    ViewData["Title"] = "Accept Management Invitation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            @if (Model.IsValid && Model.Invitation != null && Model.Management != null)
            {
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h2 class="mb-0"><i class="bi bi-envelope-check"></i> @ViewData["Title"]</h2>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <i class="bi bi-building" style="font-size: 4rem; color: #0d6efd;"></i>
                            <h4 class="mt-3">You're invited to join</h4>
                            <h3 class="text-primary">@Model.Management.Name</h3>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Management.LegalName))
                        {
                            <p class="text-center text-muted">@Model.Management.LegalName</p>
                        }

                        <div class="alert alert-info">
                            <strong>Role:</strong> @Model.Invitation.Role
                        </div>

                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <div class="mb-3">
                                <label asp-for="Input.FullName" class="form-label"></label>
                                <input asp-for="Input.FullName" class="form-control" />
                                <span asp-validation-for="Input.FullName" class="text-danger"></span>
                                <small class="form-text text-muted">This is how your name will appear to other organization members.</small>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="bi bi-check-circle"></i> Accept Invitation
                                </button>
                            </div>
                        </form>

                        <div class="text-center mt-3">
                            <small class="text-muted">
                                By accepting, you'll be added to @Model.Management.Name and can access organization resources.
                            </small>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow border-danger">
                    <div class="card-header bg-danger text-white">
                        <h2 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Invitation Error</h2>
                    </div>
                    <div class="card-body text-center">
                        <i class="bi bi-x-circle" style="font-size: 4rem; color: #dc3545;"></i>
                        <h4 class="mt-3 mb-4">@Model.ErrorMessage</h4>
                        
                        <p class="text-muted">
                            If you believe this is an error, please contact the person who sent you the invitation.
                        </p>

                        <div class="d-grid gap-2 mt-4">
                            <a href="~/" class="btn btn-primary">
                                <i class="bi bi-house"></i> Go to Home
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
