@page
@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center mb-5">
    <h1 class="display-4">Welcome to Properly</h1>
    <p class="lead">Select your role to get started</p>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-building fs-1 text-primary mb-3"></i>
                <h5 class="card-title">Company User</h5>
                <p class="card-text">Manage company settings, invite users, and oversee operations.</p>
            </div>
            <div class="card-footer bg-transparent border-0 text-center pb-3">
                <a asp-page="/Company/Index" class="btn btn-primary">Go to Company</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-person-badge fs-1 text-success mb-3"></i>
                <h5 class="card-title">Owner User</h5>
                <p class="card-text">Manage your properties, track finances, and view reports.</p>
            </div>
            <div class="card-footer bg-transparent border-0 text-center pb-3">
                <a asp-page="/Owners" class="btn btn-success">Go to Owners</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-house-door fs-1 text-info mb-3"></i>
                <h5 class="card-title">Tenant</h5>
                <p class="card-text">View your lease, submit maintenance requests, and pay rent.</p>
            </div>
            <div class="card-footer bg-transparent border-0 text-center pb-3">
                <a asp-page="/Tenants" class="btn btn-info">Go to Tenants</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-tools fs-1 text-warning mb-3"></i>
                <h5 class="card-title">Service User</h5>
                <p class="card-text">Manage service requests, schedule appointments, and track work orders.</p>
            </div>
            <div class="card-footer bg-transparent border-0 text-center pb-3">
                <a asp-page="/Managers" class="btn btn-warning">Go to Services</a>
            </div>
        </div>
    </div>
</div>
